{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension (Watch, bundled)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "preLaunchTask": "watch",
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**"],
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Run Extension (Build once, bundled)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "preLaunchTask": "npm: package",
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**"],
      "internalConsoleOptions": "openOnSessionStart"
    },

    /* Optional: debug your Node helper if you use scripts/test-runner.js */
    {
      "name": "Debug: Node test-runner.js",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/test-runner.js",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {},
      "autoAttachChildProcesses": true,
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
